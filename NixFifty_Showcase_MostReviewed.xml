<?xml version="1.0" encoding="utf-8"?>
<widget widget_id="NixFifty_Showcase_MostReviewed" widget_title="Showcase: Most Reviewed Items" widget_desc="" widget_string="1.0.0" widget_version="1" widget_url="" widget_install_class="EWRporta2_Widget_NixFifty_Showcase_Install" widget_install_method="install" widget_uninstall_class="" widget_uninstall_method="" ctime="">
  <listeners/>
  <options>
    <option option_id="nixfifty_showcase_mostreviewed_limit" edit_format="spinbox" data_type="positive_integer" display_order="10">
      <default_value>5</default_value>
      <edit_format_params></edit_format_params>
      <sub_options></sub_options>
      <title>Most Reviewed Items Limit</title>
      <explain><![CDATA[The maximum number of most reviewed items that will be displayed.]]></explain>
    </option>
    <option option_id="nixfifty_showcase_mostreviewed_attachments" edit_format="onoff" data_type="boolean" display_order="20">
      <default_value>1</default_value>
      <edit_format_params></edit_format_params>
      <sub_options></sub_options>
      <title>Display Thumbnail</title>
      <explain><![CDATA[When enabled, a thumbnail of the Showcase item is displayed.]]></explain>
    </option>
    <option option_id="nixfifty_showcase_mostreviewed_category" edit_format="callback" data_type="array" display_order="30">
      <default_value></default_value>
      <edit_format_params>NFLJ_Showcase_Option_CategoryChooser::renderOption</edit_format_params>
      <sub_options>*</sub_options>
      <title>Applicable Categories</title>
      <explain><![CDATA[Select which categories this widget should display most reviewed items from.]]></explain>
    </option>
  </options>
  <phrases/>
  <templates>
    <template title="EWRwidget_NixFifty_Showcase_MostReviewed"><![CDATA[<xen:if is="{$wCached.mostReviewedItems}">
    <div class="section widget_{$wWidget}" id="widget_{$wWidlink}">
        <div class="secondaryContent">
            <h3>{$wTitle}</h3>
            <xen:if is="{$wCached.displayImages}">
                <xen:require css="nflj_showcase_wf_sidebar.css" />
                <div class="showcaseListSidebar">
                    <div class="avatarList">
                        <ol>
                            <xen:foreach loop="$wCached.mostReviewedItems" value="$item">
                                <li>
                                    <xen:if is="{$item.cover_image}">
                                        <a class="avatar NoOverlay" href="{xen:link showcase, $item}">
                                            <img width="48" height="48" border="0" src="{$item.cover_image.thumbnailUrl}" />
                                        </a>
                                        <xen:elseif is="{$item.category_image}" />
                                        <a class="avatar NoOverlay" href="{xen:link showcase, $item}">
                                            <img width="48" height="48" border="0" alt="{$item.category_name}" src="{xen:property imagePath}/nflj/showcase/category_images/{$item.category_image}">
                                        </a>
                                        <xen:else />
                                        <xen:avatar user="$item" size="s" img="true" href="{xen:link showcase, $item}" class="NoOverlay" />
                                    </xen:if>

                                    <a class="title" href="{xen:link showcase, $item}">{xen:helper snippet, $item.item_name, 40}</a>
                                    <div class="extraData">
                                        <xen:username user="$item" />, <a href="{xen:link showcase, $item}" class="faint"><xen:datetime time="$item.date_added" /></a>, <a href="{xen:link showcase/category, $item}">{$item.category_name}</a>
                                    </div>
                                </li>
                            </xen:foreach>
                        </ol>
                    </div>
                </div>
                <xen:else />
                <dl>
                    <xen:foreach loop="$wCached.mostReviewedItems" value="$mostReviewedItem">
                        <dt style="margin-top:5px;">
                            <a href="{xen:link showcase, $mostReviewedItem}">{xen:helper snippet, $mostReviewedItem.item_name, 40}</a>
                        </dt>
                        <dd class="muted">
                            <xen:username user="$mostReviewedItem" />,</span> <a href="{xen:link showcase, $mostReviewedItem}" class="faint"><xen:datetime time="$mostReviewedItem.date_added" /></a>, <span><a href="{xen:link showcase/category, $mostReviewedItem}">{$mostReviewedItem.category_name}</a>
                        </dd>
                    </xen:foreach>
                </dl>
            </xen:if>
        </div>
    </div>
</xen:if>]]></template>
  </templates>
</widget>
